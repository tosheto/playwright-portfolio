{
    "compilerOptions":  {
                            "target":  "ES2021",
                            "module":  "commonjs",
                            "moduleResolution":  "node",
                            "lib":  [
                                        "ES2021",
                                        "DOM"
                                    ],
                            "types":  [
                                          "node",
                                          "playwright"
                                      ],
                            "strict":  true,
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "resolveJsonModule":  true,
                            "outDir":  "dist",
                            "noEmit":  true
                        },
    "include":  [
                    "tests",
                    "playwright.config.ts"
                ]
}
