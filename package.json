{
  "name": "playwright-portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "Playwright UI E2E suite with POM, helpers & CI",
  "scripts": {
    "pw:install": "npx playwright install --with-deps",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "PWDEBUG=1 playwright test",
    "report": "playwright show-report --port 0",
    "test:allure": "playwright test --reporter=line,allure-playwright",
    "allure:generate": "npx allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "npx allure open ./allure-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "allure-playwright": "^2.15.1",
    "typescript": "^5.5.0"
  }
}
